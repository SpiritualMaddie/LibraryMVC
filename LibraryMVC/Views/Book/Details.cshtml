@model LibraryMVC.Models.Book

@{
    ViewData["Title"] = "Details";

}

<!-- Breadcrumbs -->
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-area="" asp-controller="Book" asp-action="Index">Books</a></li>
        <li class="breadcrumb-item active" aria-current="page">Details</li>
    </ol>
</nav>

<!-- Breadcrumbs end -->
<div class="container container-fluid mt-5 container-white">
    <div class="text-center mt-2">
        <h2>@Html.DisplayFor(model => model.Title)</h2>
        <hr />
    </div>

    <div class="row my-3 mx-3">
        <div class="col-md-5 mt-4">
            @if (Model.BookImgUrl == null)
            {
                <p>No picture available</p>
            }
            else
            {
                <img src="@Model.BookImgUrl" class="frame-img" />
            }
        </div>

        <dl class="col-md-7">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Author)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Author)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Pages)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Pages)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Language)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Language)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.PublishedDate)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.PublishedDate)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Publisher)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Publisher)
            </dd>
            <div class="col-md-12 mt-4">
                <a class="btn btn-primary ms-2" asp-action="Edit" asp-route-id="@Model?.ISBN">Edit</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model?.ISBN">Delete</a>
                <br />
                <form 
                   asp-controller="BorrowedBookList"
                   asp-action="BorrowBook">
                   <input 
                       type="hidden"
                       asp-for="ISBN" />
                    <input type="submit" value="Borrow this book" class="btn btn-primary shadow-0 mt-2" />
                </form>
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success mt-3">@TempData["SuccessMessage"]</div>
                }
            </div>
        </dl>
    </div>
</div>
