@using LibraryMVC.Models
@model LibraryMVC.Models.BorrowedBookList

@{
    ViewData["Title"] = "Borrow";

}


<!-- Breadcrumbs -->
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-area="" asp-controller="Book" asp-action="Index">Books</a></li>
        <li class="breadcrumb-item active" aria-current="page">Borrow</li>
    </ol>
</nav>

<!-- Breadcrumbs end -->
<div class="container container-fluid mt-5 container-white">
    <div class="text-center mt-2">
        <h2>Please enter your information to borrow this bok</h2>
        <hr />
    </div>

    <div class="row my-3 mx-3">
        <div class="col-md-5 mt-4">
            @if (@ViewBag.bookImg == null)
            {
                <p>No picture available</p>
            }
            else
            {
                <img src="@ViewBag.bookImg" class="frame-img" />
            }
        </div>

            <div class="col-md-7">
            <form asp-action="BorrowBookPOST">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="FK_ISBN" value="@TempData["FK_ISBN"]" />

                    <div class="form-group col-md-12">
                        <br />
                        <label class="control-label">Id number</label>
                    <input asp-for="FK_CustomerId" class="form-control" placeholder="Please enter your id no" />
                    <span asp-validation-for="FK_CustomerId" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-12 text-end mt-4 me-2 mb-3">
                        <input type="submit" value="Borrow" class="btn btn-primary" />
                    </div>
                </form>

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger mt-3">@TempData["ErrorMessage"]</div>
                }
            </div>            
    </div>
</div>


